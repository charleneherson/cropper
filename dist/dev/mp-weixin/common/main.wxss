view {
  padding: 0;
  margin: 0;
  scroll-behavior: smooth;
  font-family: PingFangSC-Regular, sans-serif;
}
image {
  display: block;
}

/*重写 button 样式*/
button {
  margin: 0;
  border-radius: 50rpx;
  font-size: 32rpx;
  line-height: 88rpx;
}
button::after {
  border: none;
}
button::before {
  border: none;
}
button[type="primary"] {
  color: #fff;
  background-color: #5a84ff;
}
button[type="danger"] {
  color: #fff;
  background-color: #ff714e;
}
button[type="disabled"] {
  color: #999;
  background-color: #ececec;
}
button[plain] {
  color: #666666;
  border: 1rpx solid #dddddd;
  background-color: transparent;
}

/*点击态*/
.button-hover[type="primary"] {
  color: hsla(0, 0%, 100%, 0.6);
  background-color: #0062cc;
}
.button-hover[type="danger"] {
  background: #dd6161;
}
.clearfix:before,
.clearfix:after {
  content: " ";
  display: table;
}
.clearfix:after {
  clear: both;
}
.border_b_px {
  overflow: hidden;
  position: relative;
  border: none !important;
}
.border_b_px:after {
  content: "";
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background-color: #e9ebef;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

