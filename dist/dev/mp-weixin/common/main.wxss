[class*="zyb-hairline"] {
  position: relative;
}
.zyb-hairline--top::after {
  content: "";
  position: absolute;
  box-sizing: border-box;
  pointer-events: none;
  border: 0 solid #e9ebef;
  z-index: 1;
  top: 0;
  right: 0;
  bottom: auto;
  left: 0;
  border-top-width: 1px;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}
.zyb-hairline--left::after {
